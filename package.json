{
   "name": "requirements-linter",
   "version": "0.1.0",
   "description": "Requirements linter functions for the AI-enabled software lifecycle workbench",
   "main": "dist/src/entry.js",
   "directories": {
      "src": "src",
      "test": "test"
   },
   "author": "Jon Verrier",
   "license": "MIT",
   "scripts": {
      "build": "npm run install && tsc -b && ncp ./src/RequirementsGuidelines.md dist/RequirementsGuidelines.md",
      "install": "npm install ../PromptRepository",
      "watch": "tsc -b -w",
      "clean": "rimraf dist",
      "prestart": "npm run clean && npm run build",
      "start": "func start",
      "test": "node --loader ts-node/esm --experimental-specifier-resolution=node node_modules/mocha/bin/mocha.js test/**/*.test.ts",
      "test-mini": "mocha --require ts-node/register --extensions ts,js test/**/*.test.ts -g \"Splitter\" --exit"
   },
   "devDependencies": {
      "@types/chai": "^5.2.1",
      "@types/mocha": "^10.0.10",
      "@types/node": "^22.13.8",
      "@types/sinon": "^17.0.4",
      "axios": "^1.8.4",
      "expect": "^29.7.0",
      "mocha": "^11.1.0",
      "ncp": "^2.0.0",
      "openai": "^4.89.1",
      "prompt-repository": "file:../PromptRepository",
      "rimraf": "^6.0.1",
      "sinon": "^20.0.0",
      "ts-node": "^10.9.2",
      "tslib": "^2.8.1",
      "typescript": "^5.7.3"
   }
}
